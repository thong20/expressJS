
//- create.pug
extends ../layouts/common.pug

block content
    
    h1.ml-3 Login
    .ml-5
        if errors
            each error in errors
                .alert.alert-danger.col-5=error

        form(method="POST")
            .form-group
                label(for="email") Email
                input#email(name="email" type="text" class="form-control col-5" value=values?values.email:'')
                label(for="password") Password
                input#password(name="password" type="password" class="form-control col-5" value=values?values.password:'')
                button(class="btn btn-primary mt-2" aria-pressed="false") Login
        a.btn.btn-secondary(href="/user") < Back

    