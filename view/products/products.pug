//- products.pug
extends ../layouts/common.pug

block content
    h1 Products
    .d-flex
        form.ml-auto.mr-3(method='GET')
            input(name='q', type='text')
            button.btn.btn-primary.ml-3 Search
    //- .row.d-flex.justify-content-center
    .row
        each product in products
            .col-lg-3
                .card.mb-3
                    img.card-img-top(src='https://loremflickr.com/320/240')
                    .card-body
                        h5.card-title= product.name
                        p.card-text Some quick example text to build on the card title and make up the bulk of the card&apos;s content.
                        a.btn.btn-primary(href='#') Read more ...
    ul.pagination.justify-content-center
        li.page-item
            a.page-link(href='#') Previous
        li.page-item
            a.page-link(href='#') 1
        li.page-item.active
            a.page-link(href='#') 2
        li.page-item
            a.page-link(href='/products?page='+2) 3
        li.page-item
            a.page-link(href='#') Next

    //- .row
        each product in products
            .col-sm-6.col-md-4.col-lg-3
                .card.mb-3
                    img.card-img-top(src=product.image)
                    .card-body 
                        h5.card-title=product.name
                        p.card-text=product.description
                        a.btn.btn-primary(href="#") Add to cart
    




